generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Event {
  id        Int                 @id @default(autoincrement())
  title     String
  content   String
  address   String
  date      DateTime
  status    STATUS_PUBLICATIONS @default(PUBLIC)
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  @@index([id, date])
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  UserPassword UserPassword?

  @@index([email])
}

enum STATUS_PUBLICATIONS {
  PUBLIC
  DRAFT
}

model UserPassword {
  id       Int    @id @default(autoincrement())
  password String
  userId   Int    @unique
  user     User   @relation(fields: [userId], references: [id])
}
